<div class="container">
  <div class="row">
    <h2><strong>New Tenant</strong></h2>
  </div>
  <div class="row">
    <form action="/user/property/<%= property._id %>/tenant/new" method="post">
      <div class="form-group">
        <label for="InputName">Name of Tenant</label>
        <input type="text" class="form-control" id="InputName" name="tenant[name]" placeholder="Tenant Name">
      </div>
      <div class="form-group">
        <label for="InputShopName">Name of Shop</label>
        <input type="text" class="form-control" id="InputShopName" name="tenant[shop_name]" placeholder="Shop Name">
      </div>
      <div class="form-group">
        <label for="InputUnit">Unit No.</label>
        <input type="text" class="form-control" id="InputUnit" name="tenant[unit]" placeholder="Unit No.">
      </div>
      <div class="form-group">
        <label for="InputContact">Contact No.</label>
        <input type="text" class="form-control" id="InputContact" name="tenant[contact]" placeholder="Contact">
      </div>
      <div class="form-group">
        <label for="InputDateRented">Payment Due Date</label>
        <input type="date" class="form-control" id="InputDateRented" name="tenant[date_rented]" placeholder="Date Rented">
      </div>
      <div class="form-group">
        <label for="InputRentalStatus">Rental Status (Paid/Owing)</label>
        <input type="text" class="form-control" id="InputRentalStatus" name="tenant[rent_status]" placeholder="Rental Status">
      </div>
      <button type="submit" class="btn btn-default btn-success">Add</button>
    </form>
  </div>
</div>

