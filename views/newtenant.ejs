<% include ./partials/header.ejs  %>

<div class="container">
  <div class="row">
    <a class="btn btn-default btn-primary" href="/user" role="button">Home</a>
    <a class="btn btn-default btn-primary" href="/user/property" role="button">Properties</a>
    <a class="btn btn-default btn-primary" href="/logout" role="button">Logout</a>
    <h1>New Tenant</h1>
    <form action="/user/tenant/<%= property.id %>/new" method="post">
      <div class="form-group">
        <label for="InputName">Name of Tenant</label>
        <input type="text" class="form-control" id="InputName" name="tenant[name]" placeholder="Tenant Name">
      </div>
      <div class="form-group">
        <label for="InputShopName">Name of Shop</label>
        <input type="text" class="form-control" id="InputShopName" name="tenant[shop_name]" placeholder="Shop Name">
      </div>
      <div class="form-group">
        <label for="InputUnit">Unit No</label>
        <input type="text" class="form-control" id="InputUnit" name="tenant[unit]" placeholder="Unit No.">
      </div>
      <div class="form-group">
        <label for="InputContact">Contact</label>
        <input type="text" class="form-control" id="InputContact" name="tenant[contact]" placeholder="Contact">
      </div>
      <div class="form-group">
        <label for="InputPostalCode">Date Rented</label>
        <input type="date" class="form-control" id="InputPostalCode" name="tenant[date_rented]" placeholder="Date Rented">
      </div>
      <button type="submit" class="btn btn-default btn-primary">Submit</button>
    </form>
  </div>
</div>

<% include ./partials/footer.ejs  %>
