<% include ./partials/header.ejs  %>

<div class="container">
  <div class="row">
    <a class="btn btn-default btn-primary" href="/user" role="button">Home</a>
    <a class="btn btn-default btn-primary" href="/logout" role="button">Logout</a>
    <h1>New Property</h1>
    <form action="/user/property" method="post">
      <div class="form-group">
        <label for="InputProperty">Name of Property</label>
        <input type="text" class="form-control" id="InputProperty" name="user[local][properties][name]" placeholder="Property Name">
      </div>
      <div class="form-group">
        <label for="InputAddress">Address</label>
        <input type="text" class="form-control" id="InputAddress" name="user[local][properties][address]" placeholder="Address">
      </div>
      <div class="form-group">
        <label for="InputPostalCode">Postal Code</label>
        <input type="text" class="form-control" id="InputPostalCode" name="user[local][properties][postalcode]" placeholder="Postal Code">
      </div>
      <button type="submit" class="btn btn-default btn-primary">Submit</button>
    </form>
  </div>
</div>

<% include ./partials/footer.ejs  %>
