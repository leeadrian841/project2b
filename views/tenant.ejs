<% include ./partials/header.ejs  %>

<div class="container">
  <div class="row">
    <a class="btn btn-default btn-primary" href="/user" role="button">Home</a>
    <a class="btn btn-default btn-primary" href="/user/property" role="button">Properties</a>
    <a class="btn btn-default btn-primary" href="/user/property/<%= property._id %>/tenant/new" role="button">Add New Tenant</a>
    <a class="btn btn-default btn-primary" href="/logout" role="button">Logout</a>
    <h1>Tenants</h1>
    <ul>
      <% allTenants.forEach(function(tenant) { %>
        <li>
          <%= tenant.shop_name %></br>
          <%= tenant.name %></br>
          <%= tenant.unit %></br>
          <%= tenant.contact %></br>
          <%= tenant.date_rented %></br>
          <form method="GET" action="/user/property/<%=property._id%>/tenant/<%=tenant._id%>/edit">
            <button type="submit" class="btn btn-default btn-danger">Edit</button>
          </form>
          <form method="POST" action="/user/property/<%=property._id%>/tenant/<%=tenant._id%>?_method=DELETE">
            <button type="submit" class="btn btn-default btn-danger">Delete</button>
          </form>
        </li>
      <% }) %>
    </ul>
  </div>
</div>

<% include ./partials/footer.ejs  %>
