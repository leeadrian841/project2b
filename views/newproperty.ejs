<div class="container">
  <div class="row">
    <h2><strong>New Property</strong></h2>
  </div>
  <div class="row">
    <form action="/user/property/new" method="post" data-parsley-validate>
      <div class="form-group">
        <label for="InputProperty">Name of Property</label>
        <input type="text" class="form-control" id="InputProperty" name="property[name]" placeholder="Property Name" required>
      </div>
      <div class="form-group">
        <label for="InputAddress">Address</label>
        <input type="text" class="form-control" id="InputAddress" name="property[address]" placeholder="Address" required>
      </div>
      <div class="form-group">
        <label for="InputPostalCode">Postal Code</label>
        <input type="text" class="form-control" id="InputPostalCode" name="property[postalcode]" placeholder="Postal Code" required data-parsley-maxlength="6" data-parsley-error-message="Please type in the 6-digit postal code.">
      </div>
      <button type="submit" class="btn btn-default btn-success">Add</button>
    </form>
  </div>
</div>
