<div class="container">
  <div class="row">
    <a class="btn btn-default btn-primary" href="/user" role="button">Home</a>
    <a class="btn btn-default btn-primary" href="/user/property" role="button">Properties</a>
    <a class="btn btn-default btn-primary" href="/logout" role="button">Logout</a>
    <h1>Edit Property</h1>
    <h1></h1>
    <form action="/user/property/<%=property._id%>/edit?_method=PUT" method="post">
      <div class="form-group">
        <label for="InputProperty">Edit Property</label>
        <input type="text" class="form-control" id="InputProperty" name="property[name]" placeholder="Property Name" value="<%=property.name%>">
      </div>
      <div class="form-group">
        <label for="InputAddress">Edit Address</label>
        <input type="text" class="form-control" id="InputAddress" name="property[address]" placeholder="Address" value="<%=property.address%>">
      </div>
      <div class="form-group">
        <label for="InputPostalCode">Edit Postal Code</label>
        <input type="text" class="form-control" id="InputPostalCode" name="property[postalcode]" placeholder="Postal Code" value="<%=property.postalcode%>">
      </div>
      <button type="submit" class="btn btn-default btn-primary">Save</button>
    </form>
  </div>
</div>

