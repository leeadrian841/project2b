<% include ./partials/header.ejs  %>

<div class="container">
  <div class="jumbotron text-center">
      <h1>Welcome to StorVault</h1>
      <h2>Easy and Simple Storage with Us!</h2>
      <p>Login with:</p>
      <% if(message.length > 0) { %>
        <div class="alert alert-danger">
        <%= message %>
        </div>
        <% } %>
        <form class="form-inline" method="post" action="/">
          <div class="form-group">
            <label for="inputEmail" class="control-label sr-only">Email</label>
            <input type="email" class="form-control" id="inputEmail" name="user[local][email]" placeholder="Email">
          </div>
          <div class="form-group">
            <label for="inputPassword" class="control-label sr-only">Password</label>
            <input type="password" class="form-control" id="inputPassword" name="user[local][password]" placeholder="Password">
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary">Log in</button>
          </div>
        </form>
        <div class="form-group">
          <p>
            New user? <a href="/signup">Sign up</a>
          </p>
        </div>
  </div>
</div>

<% include ./partials/footer.ejs  %>
