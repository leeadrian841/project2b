<% include ./partials/header.ejs  %>

<div class="container">
  <div class="jumbotron text-center">
      <h1>Welcome to StorVault</h1>
      <h2>Easy and Simple Storage with Us!</h2>
      <p>Login with:</p>
      <% if(message.length > 0) { %>
        <div class="alert alert-danger">
        <%= message %>
        </div>
      <% } %>
      <form class="form-horizontal" method="post" action="/login">
        <div class="form-group">
          <label for="inputEmail" class="col-sm-2 control-label">Email</label>
          <div class="col-sm-10">
            <input type="email" class="form-control" id="inputEmail"
            name="user[local][email]" placeholder="Type your email here">
          </div>
        </div>
        <div class="form-group">
          <label for="inputPassword" class="col-sm-2 control-label">Password</label>
          <div class="col-sm-10">
            <input type="password" class="form-control" id="inputPassword" name="user[local][password]" placeholder="Type your password here">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Log in</button>
          </div>
        </div>
      </form>
  </div>
</div>
